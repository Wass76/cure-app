FROM php:8.1-fpm

# Install system dependencies required for PHP extensions and Composer
RUN apt-get update && apt-get install -y \
    git \
    unzip \
    curl \
    libzip-dev \
    zip \
    && docker-php-ext-install pdo pdo_mysql zip

# Install Composer globally
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# Set PHP configurations for large file uploads
RUN echo "upload_max_filesize = 150M" > /usr/local/etc/php/conf.d/uploads.ini \
    && echo "post_max_size = 150M" >> /usr/local/etc/php/conf.d/uploads.ini \
    && echo "memory_limit = 256M" >> /usr/local/etc/php/conf.d/uploads.ini \
    && echo "max_execution_time = 400" >> /usr/local/etc/php/conf.d/uploads.ini \
    && echo "max_input_time = 400" >> /usr/local/etc/php/conf.d/uploads.ini

# Set working directory for your app
WORKDIR /var/www/html

# Copy your application files into the container
COPY . .

# Set permissions for files
RUN chown -R www-data:www-data /var/www/html

# Expose port 9000 for PHP-FPM
EXPOSE 9000
